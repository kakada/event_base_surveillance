.w-50.view-center
  = simple_form_for @api_key do |f|
    = f.input :name
    = f.input :ip_address

    - if token = @api_key.access_token.presence
      .form-row
        .form-group.col-md-9
          %label Access Token
          .form-control.access-token-view= token
          = f.input :access_token, as: :hidden, input_html: {class: 'access-token'}

        .form-group.col-md-3
          %label
          %button.btn.btn-light.btn-regenerate-token{type: 'button'}
            %i.fas.fa-redo-alt
            Regenerate token

    = f.button :submit, class: 'btn btn-primary'
    = link_to 'Cancel', api_keys_path, class: 'btn btn-secondary'

