- content_for :header_title do
  = t('medisy.medisys_feeds')

= render 'filter'

.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @medisys_feeds }

    - if @medisys_feeds.present?
      = render 'medisys_feeds'

      - if @pagy.pages > 1
        .pagy-wrapper.mt-3
          != pagy_bootstrap_nav(@pagy)

    .acknowledge
      .d-flex.flex-grow-1.align-items-center.justify-content-end
        %span.mr-1 EBS media monitoring is powered by
        = link_to "https://medisys.newsbrief.eu/medisys/homeedition/en/home.html", target: '_blank' do
          %span Medysis
          = image_tag "medisys_logo.png", height: 20
