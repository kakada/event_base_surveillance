#content
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      %h3= t('event.event')
      - if policy(Event).create?
        = link_to new_event_path, class: 'btn btn-primary' do
          %i.fas.fa-plus
  = render 'filter'
  = render partial: "shared/no_data", locals: { items: @events }

  - if @events.present?
    %table.table.table-hover.medium-width
      %thead
        %tr
          %th= t('event.id')
          %th= t('event.event_type')
          %th= t('event.location')
          %th= t('event.number_of_case')
          %th= t('event.progress')
          %th= t('event.risk_level')
          %th= t('event.onset_date')
          %th= t('event.owner')
          %th

      %tbody#body-content
        = render 'events'

    - if @pagy.pages > 1
      .pagy-wrapper
        != pagy_bootstrap_nav(@pagy)
