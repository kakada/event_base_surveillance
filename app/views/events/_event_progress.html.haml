%div{style: 'display: flex; align-items: center'}
  - form_type_ids = event.forms.pluck(:form_type_id)
  - form_types = event.event_type.form_types
  - form_types.each_with_index do |form_type, index|

    - if form_type_ids.include?(form_type.id)
      - form = event.forms.find_by(form_type_id: form_type.id)
      = link_to form_type.name, edit_event_form_path(event, form), class: 'btn btn-link'
    - else
      = link_to form_type.name, new_event_form_path(event), class: 'btn btn-link'

    - if index < form_types.length - 1
      %i.fa.fa-chevron-right

