- source_of_informations = current_program.milestones.root.sections.default.first.fields.find_by(code: 'source_of_information').field_options.pluck(:name, :value)

.filter-input.tooltips{ 'data-toggle' => 'tooltip' }
  = select_tag 'source_of_informations[]', options_for_select(source_of_informations, params[:source_of_informations]), multiple: true, "data-live-search" => "true", "data-count-selected-text" => "{0} #{t('event.source_of_informations_selected')}", "data-selected-text-format" => "count > 1", "data-none-selected-text" => t("event.any_source_of_information"), class: 'selectpicker form-control'
