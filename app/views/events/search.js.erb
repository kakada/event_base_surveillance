<% if @pagy.page == 1 %>
  $(".event-list").html("<%= escape_javascript(render('link_events')) %>");
<% else %>
  $(".event-list").append("<%= escape_javascript(render('link_events')) %>");
<% end %>

$('#div_next_link').html("<%= escape_javascript(render('next_link')) %>");

if($('#search').val().length == 0) {
  $(".event-list").hide()
} else {
  $(".event-list").show()
}

$('.loading').addClass('d-none');
