#content
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .flex-row-vertical-center
      %h3
        = "#{@event.event_type_name}: "
        %span.badge.badge-light= @event.uuid

      = @event.field_values.select{ |fv| fv.field_code == 'progress' }.first.try(:html_tag).try(:html_safe)

  %ul.list.flex1
    %li
      %span.type= "#{t('event.event_type')}:"
      %span.value= @event.event_type_name
    %li
      %span.type= "#{t('event.location')}:"
      %span.value= @event.location_name

    %li
      %span.type= "#{t('event.link_to_event')}:"
      %span.value
        - if @event.link_uuid.present?
          = link_to @event.link_uuid, "#{ENV['HOST_URL']}/#{event_path(@event.link_uuid)}", style: 'color: #007bff'
        - else
          = '-'

    - @event.milestone.fields.except_locations.each do |field|
      = render 'field_value', field_values: @event.field_values, field: field

  - @event.event_milestones.each do |event_milestone|
    %h4="#{event_milestone.milestone.name}"

    %ul.list.flex1
      - event_milestone.milestone.fields.each do |field|
        = render 'field_value', field_values: event_milestone.field_values, field: field
