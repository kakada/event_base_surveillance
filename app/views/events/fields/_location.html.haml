- field_name = field.name.downcase
- error_msg = (@form && @form.errors[field_name]) || (@event && @event.errors["forms.#{field_name}"])

%div{ class: error_msg.present? ? 'form-group form-group-invalid' : 'form-group' }
  = f.label field_name
  = f.hidden_field :field_id, value: field.id
  = f.hidden_field :value, value: 'location', class: 'form-control location'
  - if error_msg.present?
    .invalid-feedback{style: 'display: block'}= error_msg.join('; ')

  = f.fields_for :properties, OpenStruct.new(f.object.properties) do |ff|
    .locations
      #province.form-group.row
        = ff.label(:province_id, class: 'col-sm-3 col-form-label')
        = ff.hidden_field(:province_id)
        .col-sm-9
          = ff.select(:province_id, [], {:include_blank => "Please select"}, {:data => {:pumi_select_target => "district", :pumi_select_collection_url => pumi.provinces_path, :pumi_select_collection_label_method => "name_km", :pumi_select_collection_value_method => "id", :pumi_select_populate_on_load => true, :pumi_select_has_hidden_value => true}, class: 'select-location form-control'})

      #district.form-group.row
        = ff.label(:district_id, class: 'col-sm-3 col-form-label')
        = ff.hidden_field(:district_id)
