- field_name = field.name.downcase
- error_msg = main_object.errors["#{field_name}"]

.form-group{ class: ('form-group-invalid' if error_msg.present?) }
  = f.label field_name
  = f.hidden_field :field_code, value: field.code
  = f.hidden_field :field_id, value: field.id

  .input-group{"data-target-input" => "nearest"}
    - id = "event_field_values_attributes_#{f.index}_value"
    = f.text_field :value, value: f.object.value, class: ['form-control datetimepicker', ('is-invlid' if error_msg.present?)], autocomplete: 'off', id: id, data: { target: "##{id}", toggle: 'datetimepicker'}, placeholder: 'yyyy-mm-dd hh:mm'
    .input-group-append{"data-target" => "##{id}", "data-toggle" => "datetimepicker"}
      .input-group-text
        %i.far.fa-clock

  - if error_msg.present?
    .invalid-feedback= error_msg.join('; ')
