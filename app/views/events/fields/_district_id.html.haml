- field_name = field.name.downcase
- error_msg = main_object.errors["#{field_name}"]

%div{ class: error_msg.present? ? 'form-group form-group-invalid' : 'form-group' }
  / = f.label(:district_id, class: 'col-sm-3 col-form-label')
  / = f.hidden_field(:district_id)
  = f.label field_name
  = f.hidden_field :field_code, value: field.code
  = f.hidden_field :field_id, value: field.id
  = f.hidden_field :value, value: f.object.value
  = f.select(:value, [], {:include_blank => "Please select"}, {:data => {:pumi_select_id => "district", :pumi_select_target => "commune", :pumi_select_collection_url => pumi.districts_path(:province_id => "FILTER"), :pumi_select_collection_url_filter_interpolation_key => "FILTER", :pumi_select_collection_label_method => "name_km", :pumi_select_collection_value_method => "id", :pumi_select_disabled_target => "#district", :pumi_select_disabled_class => "my-disabled-class", :pumi_select_has_hidden_value => true}, class: ['select-location form-control', ('is-invalid' if error_msg.present?)]})

  - if error_msg.present?
    .invalid-feedback= error_msg.join('; ')
